{
  "manifest_version": 3,
  "name": "QuackTask",
  "version": "1.6.0",
  "description": "Sync your Canvas tasks with Google Tasks to stay organized and on top of your assignments effortlessly.",
  "permissions": ["scripting", "activeTab", "storage", "identity", "tabs"],
  "host_permissions": [
    "https://sit.instructure.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "action": {
    "default_title": "QuackTask"
  },
  "content_scripts": [
    {
      "matches": ["https://sit.instructure.com/*"],
      "js": ["src/content/content.js", "src/content/sidebar.js"],
      "css": ["src/styles/sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icons/quacktask_16.png",
    "32": "assets/icons/quacktask_32.png",
    "48": "assets/icons/quacktask_48.png",
    "128": "assets/icons/quacktask_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "703082686303-7o90n2qpgc1lbboas0gh4d5fpkufuh68.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/tasks",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }
}
